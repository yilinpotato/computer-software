# Backend environment variables (example)
# Copy to .env and fill in real values. Do NOT commit .env.

# Flask/SQLAlchemy
# SQLite (default in code): sqlite:///ai_study.db
# MySQL example:
# DATABASE_URL=mysql+pymysql://user:pass@host:3306/ai_study_assistant
DATABASE_URL=sqlite:///ai_study.db

# Mail (SMTP)
MAIL_SERVER=smtp.163.com
MAIL_PORT=465
MAIL_SUPPRESS_SEND=False
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_smtp_app_password
MAIL_DEFAULT_SENDER=AI Study Assistant <your_email@example.com>

# Upload directory (optional)
# ERROR_BOOK_UPLOAD_DIR=instance/uploads/error_book

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Whisper
WHISPER_MODEL=openai/whisper-base

# PaddleOCR optional overrides
# OCR_TEXT_DETECTION_MODEL_NAME=
# OCR_TEXT_DETECTION_MODEL_DIR=
# OCR_TEXT_RECOGNITION_MODEL_NAME=
# OCR_TEXT_RECOGNITION_MODEL_DIR=
